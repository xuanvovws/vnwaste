                                    <tree>
                                        <field name="name"/>
                                        <field name="ca_lam_viec_lscc"/>
                                        <field name="ngay_bd_lscc"/>
                                        <field name="ngay_kt_lscc"/>
                                        <field name="time1_lscc"/>
                                        <field name="time2_lscc"/>
                                    </tree>
                                </field>
                            </page>
                            
