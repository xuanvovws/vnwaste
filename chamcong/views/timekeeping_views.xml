                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="ngay"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="danh_sach_cham_cong_ngay" string="Danh Sách Chấm Công"
                               attrs="{'invisible':[('state', 'in', ['daduyet_ccn', 'chamcong_ccn'])]}">
