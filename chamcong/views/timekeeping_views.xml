                                  attrs="{'invisible':[('state', 'in', ['moi_ccn', 'daduocxacnhan_ccn', 'daduyet_ccn'])]}">                                
                                <field name="baocao_kn_ccn">
                                    <tree>
                                        <field name="name_bc"/>
                                        <field name="ca_lam_viec_bc"/>
                                        <field name="ngay_bd_bc"/>
                                        <field name="ngay_kt_bc"/>
                                        <field name="thamchieu_bc"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>                    
                </form>
            </field>
        </record>
      
