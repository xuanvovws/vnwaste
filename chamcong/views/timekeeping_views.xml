      <!-- Chấm Công theo từng Ngày view -->
        <record id="cham_cong_ngay_form_view" model="ir.ui.view">
            <field name="name">cham.cong.ngay.form.view</field>
            <field name="model">chamcong.ngay</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object" string="XÁC NHẬN" name="xacnhan_ngay" states="moi_ccn" class="btn-info"/>
                        <button type="object" string="VỀ DỰ THẢO" name="veduthao_ngay" states="daduocxacnhan_ccn" class="active"/>
                        <button type="object" string="HỦY" name="huy_ngay" states="daduyet_ccn" class="active"
