                                    <tree>
                                        <field name="name_dscc"/>
                                        <field name="ca_lam_viec_dscc"/>
                                        <field name="thoigian_bd_dscc"/>
                                        <field name="thoigian_kt_dscc"/>
                                        <field name="trangthai_dscc"/>
